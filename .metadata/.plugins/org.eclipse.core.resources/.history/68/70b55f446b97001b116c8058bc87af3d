package day0407.fileCopy;

import java.io.BufferedInputStream;
import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;

public class FileCopy {
	public static void main(String[] args) {
		//파일 복사
		//파일을 읽어서 원하는 파일을 읽고 새파일에 쓰면 됨
		try(BufferedInputStream bin=new BufferedInputStream(new FileInputStream(new File("image/night-view-6061251_1920.jpg")));
				BufferedOutputStream bout=new BufferedOutputStream(new FileOutputStream(new File("src/day0407/bufferedEx02/night-view-6061251_1920.jpg")))){
			 
			 while(bin.available()>0) {
				 bout.write(bin.read());
			 }
			 
			 
			 
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
