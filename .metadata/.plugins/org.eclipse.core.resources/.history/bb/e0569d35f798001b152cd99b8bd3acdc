package day0409Ex;

import java.io.BufferedReader;
import java.io.IOException;

public class SeverRead extends Thread {
	BufferedReader br;

	public SeverRead(BufferedReader br) {
		this.br = br;
	}

	
	public void run() {
		try {
			while (true) {
				String msg = br.readLine();
				System.out.println(msg);
			}
		} catch (IOException e) {
			e.printStackTrace();
		}

	}
}
