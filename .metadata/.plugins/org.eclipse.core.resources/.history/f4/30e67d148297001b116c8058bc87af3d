package day0407Homework;

import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;

public class MyGugu {
	public static void main(String[] args) {
		File file=new File("src/day0407Homework/makeGuguFile()/gugu.txt");
		if(file.isDirectory()) {
		}else {
			file.mkdirs();
			try {
				file.createNewFile();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		
		int k=2;
		String str=" ";
		int a =Integer.parseInt(" ");
		
		try(BufferedOutputStream bout=new BufferedOutputStream(new FileOutputStream(file))){
			for(int i=2;i<10;i++)
				for(int j=1;j<=i-1;j++)
			{
				bout.write(i);
				bout.write(42);
				bout.write(j);
				bout.write(61);
				bout.write(i*j);
				bout.write(a);
				
			}
			
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		
	}
}
