package day0409Ex;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.IOException;
import java.io.OutputStreamWriter;
import java.net.Socket;

public class SeverWriter extends Thread {
	Socket socket;
	BufferedWriter bw;
	BufferedReader br;
	
	public SeverWriter(Socket socket, BufferedWriter bw,BufferedReader br) {
		this.socket = socket;
		this.bw = bw;
		this.br = br;
	}
	
	public void run() {
		try(BufferedWriter bw=new BufferedWriter(new OutputStreamWriter(socket.getOutputStream()))){
			TcpReader r= new TcpReader(socket);
			Thread readerThread= new Thread(r); //읽은 값을 다시 써줘야한다~!!!!
			readerThread.setDaemon(true);
			readerThread.start();
			bw.write(br.readLine());
			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
}
